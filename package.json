{
    "name": "fastify-structured-app",
    "version": "1.0.0",
    "main": "app/main.ts",
    "type": "commonjs",
    "scripts": {
        "start": "ts-node app/main.ts",
        "dev": "nodemon --watch app --ext ts --exec \"ts-node\" app/main.ts",
        "build": "cd app/prisma && npx prisma generate && cd ../.. && tsc",
        "test": "npm run test:unit && npm run test:integration",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --testPathIgnorePatterns=integration --forceExit --detectOpenHandles",
        "test:integration": "jest tests/integration --runInBand --forceExit --detectOpenHandles",
        "test:integration:auth": "jest tests/integration/auth.integration.test.ts --runInBand",
        "test:integration:e2e": "jest tests/integration/cv-workflow.e2e.test.ts --runInBand",
        "test:all": "npm run test:unit && npm run test:integration",
        "test:cleanup": "ts-node tests/integration/cleanup.ts"
    },
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/multipart": "^9.1.0",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@prisma/client": "^6.14.0",
        "@prisma/extension-accelerate": "^2.0.2",
        "@sinclair/typebox": "^0.34.41",
        "@types/ioredis": "^4.28.10",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "dotenv": "^16.6.1",
        "fastify": "^5.2.0",
        "firebase-admin": "^11.10.1",
        "form-data": "^4.0.4",
        "ioredis": "^5.9.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.21.0",
        "node-fetch": "^2.7.0",
        "nodemon": "^3.1.11",
        "prisma": "^6.14.0"
    },
    "devDependencies": {
        "@types/axios": "^0.9.36",
        "@types/bcrypt": "^6.0.0",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.13.9",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    }
}
